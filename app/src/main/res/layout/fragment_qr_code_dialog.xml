<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFFFD1"
    android:padding="16dp">

    <!-- EditText for Item Name -->
    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:hint="Ürün İsmi"
        android:inputType="text" />

    <!-- EditText for Item Quantity -->
    <EditText
        android:id="@+id/editTextItemQuantity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editTextItemName"
        android:layout_marginTop="10dp"
        android:hint="Miktar"
        android:inputType="number" />

    <!-- EditText for Item Description -->
    <EditText
        android:id="@+id/editTextItemDescription"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editTextItemQuantity"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="54dp"
        android:hint="Açıklama"
        android:inputType="text" />

    <!-- Button for Confirm Action -->
    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Onayla"
        android:layout_below="@id/editTextItemDescription"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="72dp" />

    <!-- Button for Cancel Action -->
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="İptal"
        android:layout_below="@id/editTextItemDescription"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="70dp" />

</RelativeLayout>
