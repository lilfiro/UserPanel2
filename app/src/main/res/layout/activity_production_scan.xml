<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Table for scanned items -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="2dp"
            android:background="@android:color/white">
        </TableLayout>

        <!-- List Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/camera_state"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/camera_off"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamera"
                    android:textSize="12sp"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/scanned_items_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/list"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liste"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/camera_border"
            android:layout_marginTop="8dp">

            <com.example.A_Soft.CameraSourcePreview
                android:id="@+id/camera_preview"
                android:layout_width="375dp"
                android:layout_height="375dp"
                android:visibility="gone" />


            <!-- Optional Scan Area Indicator -->
            <View
                android:id="@+id/scan_area_indicator"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/scan_area"
                android:visibility="gone" />


        </FrameLayout>

        <!-- Scan Status -->
        <TextView
            android:id="@+id/scan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Toplam Okutulan: 0"/>

        <!-- Main Buttons Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Scan Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/scanButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/barcode_scan"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barkod Oku"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Manual Input Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/manualQrButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/input"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manuel GiriÅŸ"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Save Draft Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/draftButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/draft"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taslak Kaydet"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Confirm Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/confirmButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/check"
                    android:scaleType="fitCenter"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onayla"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>