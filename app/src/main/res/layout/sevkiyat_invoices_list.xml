<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_background"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Status TextView -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="PENDING"
            android:textColor="@color/purple_200" />

        <!-- Date TextView -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih: Today, 5:40 pm"
            android:textColor="#000"
            android:textStyle="bold" />

        <!-- Receipt No TextView -->
        <TextView
            android:id="@+id/receiptNoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatura No: 12345"
            android:textColor="#555" />

        <!-- Material Code TextView -->
        <TextView
            android:id="@+id/materialCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malzeme Kodu: ABC123"
            android:textColor="#555" />

        <!-- Material Name TextView -->
        <TextView
            android:id="@+id/materialNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malzeme AdÄ±: Item Name"
            android:textColor="#555" />

        <!-- Amount TextView -->
        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miktar: 10"
            android:textColor="#555" />

    </LinearLayout>
</RelativeLayout>
